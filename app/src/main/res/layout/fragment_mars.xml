<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.addon.MarsFragment">

    <ImageView
        android:layout_width="@dimen/mars_pic_size"
        android:layout_height="@dimen/mars_pic_size"
        app:srcCompat="@android:drawable/ic_media_play"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/decrementButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decrement_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/totalCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/results_count"
            app:layout_constraintBottom_toBottomOf="@+id/decrementButton"
            app:layout_constraintStart_toEndOf="@+id/decrementButton"
            app:layout_constraintTop_toTopOf="@+id/decrementButton" />
        <Button
            android:id="@+id/incrementButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/increment_text"
            app:layout_constraintBottom_toBottomOf="@+id/decrementButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/decrementButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>